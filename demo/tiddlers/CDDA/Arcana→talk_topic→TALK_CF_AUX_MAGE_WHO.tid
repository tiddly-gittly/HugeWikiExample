      "topic": "TALK_CF_AUX_MAGE_HOARD"
    },
    {
      "text": "Can you teach me any spells?",
      "topic": "TALK_CF_AUX_MAGE_SPELL_MENU",
      "condition": {
        "not": {
          "u_has_var": "celine_all_spells_known",
          "type": "flag",
          "context": "knowledge",
          "value": "yes"
        }
